{

  "name": "break-buddy",

  "version": "1.0.2",

  "description": "Your friendly reminder to take healthy breaks and stay productive!",

  "main": "src/main.js",

  "sideEffects": false,
  "scripts": {

    "start": "electron .",

    "dev": "electron . --dev",

    "test": "electron test-quick.js",

    "demo": "electron demo.js",

    "build": "electron-builder",

    "dist": "electron-builder --publish=never",

    "build:optimized": "node esbuild.config.js"

  },

  "keywords": [

    "break",

    "reminder",

    "productivity",

    "health",

    "wellness",

    "buddy"

  ],

  "author": "Cali Li",

  "license": "MIT",

  "devDependencies": {

    "electron": "^28.0.0",

    "electron-builder": "^24.13.3",

    "esbuild": "^0.20.0"

  },

  "dependencies": {

    "electron-store": "^8.1.0"

  },

  "build": {

    "appId": "com.breakbuddy.app",

    "productName": "BreakBuddy",

    "directories": {

      "output": "dist"

    },

    "files": [

      "src/**/*",

      "clock_chime/**/*",

      "assets/**/*",

      "package.json"

    ],

    "extraResources": [

      {

        "from": "clock_chime",

        "to": "clock_chime"

      }

    ],
    "compression": "maximum",
    "removePackageScripts": true,
    "removePackageKeywords": true,
    "asar": true,
    "extraMetadata": {
      "main": "src/main.js"
    },

    "win": {

      "target": [

        {

          "target": "portable",

          "arch": ["x64"]

        },

        {

          "target": "nsis",

          "arch": ["x64"]

        }

      ],

      "icon": "assets/icon.png"

    },

    "mac": {

      "target": [

        {

          "target": "dmg",

          "arch": ["x64", "arm64"]

        }

      ],

      "icon": "assets/icon.png"

    },

    "linux": {

      "target": [

        {

          "target": "AppImage",

          "arch": ["x64"]

        }

      ],

      "icon": "assets/icon.png"

    }

  }

}